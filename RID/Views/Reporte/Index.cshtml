<div class="panel panel-inverse">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            @if (User.IsInRole("Administrador") || User.IsInRole("Standard"))
            {
                <a href="@Url.Action("CrearReporte", "Reporte")" class="btn btn-xs btn-primary" data-original-title="Crear Usuario" title="Crear Usuario"><i class="fa fa-plus"></i> Generar Reporte</a>
            }
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand" data-original-title="" title="" data-init="true"><i class="fa fa-expand"></i></a>

        </div>
        <h4 class="panel-title">Reporte</h4>
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-responsive table-hover" id="IdTabla" style="width: 100%;">
            <thead>
                <tr>
                    <th></th>
                    <th>Cód. Ítem</th>
                    <th>Unidades</th>
                    <th>Descripción</th>
                    <th>Cód. Objeto</th>
                    <th>Cód. Máquina</th>
                    <th>N° de Lote</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

