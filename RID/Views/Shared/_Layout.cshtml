                        <ul class="sub-menu">

                            <li><a href="@Url.Action("Index", "Tecnico")" title="Técnico"><span>Listar Técnicos</span><i class="fa fa-paper-plane text-theme m-l-5"></i></a></li>

                        </ul>
                    </li>
                    }

                    @if (User.IsInRole("Administrador") || User.IsInRole("Standard") || User.IsInRole("Supervisor"))
