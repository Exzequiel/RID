                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="ion-ios-location bg-pink"></i>
                            <span>Áreas</span>
                        </a>
                        <ul class="sub-menu">
                            
                            @if (User.IsInRole("Administrador"))
                            {
                            <li><a href="@Url.Action("Index", "Departamento")" title="Departamentos"><span>Listar Departamento</span><i class="fa fa-paper-plane text-theme m-l-5"></i></a></li>
                            }
                        </ul>
                    </li>

                    @if (User.IsInRole("Administrador") || User.IsInRole("Supervisor"))
                    {
                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="ion-ios-cog-outline"></i>
                            <span>Máquinas</span>
                        </a>
                        <ul class="sub-menu">
                            <li><a href="@Url.Action("Index", "Maquina")" title="Máquinas"><span>Listar Máquinas</span><i class="fa fa-paper-plane text-theme m-l-5"></i></a></li>
                        </ul>
                    </li>
                    }

                    @if (User.IsInRole("Administrador"))
                    {
                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="ion-ios-locked-outline"></i>
                            <span>Gestión de Usuarios</span>
